# Blossom School Catering - Example Environment
# Copy to .env for local/server runtime as needed.

APP_NAME=blossom-schoolcatering
NODE_ENV=production

# API
API_PORT=3006
WEB_PORT=4173

# Auth (set strong secrets in real env)
AUTH_JWT_SECRET=replace-with-strong-secret
AUTH_JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
AUTH_ACCESS_TTL=15m
AUTH_REFRESH_TTL=7d
GOOGLE_CLIENT_ID=replace-with-google-oauth-client-id

# Database
DATABASE_URL=postgresql://schoolcatering:PYQMr3MZkPwCYzcTMwwBODBE@127.0.0.1:5432/schoolcatering_db
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=schoolcatering_db
DB_USER=schoolcatering
DB_PASSWORD=PYQMr3MZkPwCYzcTMwwBODBE

# Storage
GCS_BUCKET=gda-c1e1-bucket
GCS_FOLDER=blossom-schoolcatering
